<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.PlayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/L_lay"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:id="@+id/img"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to NLA 5/90"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:id="@+id/welcome"
                android:textColor="@color/black"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L_lay"
            android:layout_marginTop="10dp"
            android:text="Play your lucky numbers right here on our app. Follow the prompt below to buy your lotto tickets and start winning"
            android:layout_centerHorizontal="true"
            android:id="@+id/select_game"
            android:textSize="15sp"
            android:textColor="#808A87"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_game"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Select a game:"
            android:id="@+id/select"
            android:textSize="22sp"
            android:textColor="#3563AA"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_below="@+id/select"
            android:id="@+id/game">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="3dp"
                android:id="@+id/layout_d1"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct 1"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/layout_d1"
                android:layout_marginStart="10dp"
                android:elevation="3dp"
                android:id="@+id/layout_d2"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Sure"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/layout_d2"
                android:layout_marginStart="10dp"
                android:elevation="3dp"
                android:id="@+id/layout_d3"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct 3"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_d1"
                android:layout_marginStart="50dp"
                android:elevation="3dp"
                android:id="@+id/layout_d4"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct 4"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_d1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/layout_d4"
                android:elevation="3dp"
                android:id="@+id/layout_d5"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct 5"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_d4"
                android:layout_marginStart="10dp"
                android:elevation="3dp"
                android:id="@+id/layout_P2"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perm 2"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_d5"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/layout_P2"
                android:elevation="3dp"
                android:id="@+id/layout_P3"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perm 3"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_d5"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/layout_P3"
                android:elevation="3dp"
                android:id="@+id/layout_B"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banker"
                    android:gravity="center"
                    android:textColor="#292525"
                    android:id="@+id/text8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/game"
            android:id="@+id/lucky_lay"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your lucky numbers (1 - 90):"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3563AA"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:id="@+id/lucky"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use (+) to separate your numbers"
                android:textSize="12sp"
                android:textColor="#BECCC8"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/lucky"
                android:id="@+id/add"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:id="@+id/num"
                android:hint="Number(s)..."
                android:padding="4dp"
                android:elevation="3dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@id/add"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/lucky_lay"
            android:id="@+id/Amount"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Amount (GHc)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3563AA"
                android:layout_marginStart="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/amount_text"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:id="@+id/amount_editText"
                android:hint="0.00"
                android:padding="4dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edit_text_background"
                android:elevation="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@id/amount_text"/>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/button"
            android:text="Play now"/>

    </RelativeLayout>

</FrameLayout>
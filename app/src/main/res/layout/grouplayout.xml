<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/msgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/gImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="7dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/g_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="25"
                        android:text="Lotto Predator"
                        android:textColor="#322F2F"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:textColor="#386F88"
                        android:textStyle="bold"
                        android:textSize="12.5sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/username_lay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:text="username"
                                android:textColor="#807C7C"
                                android:textSize="16.5sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:text="posted:"
                                android:textColor="#807C7C"
                                android:textSize="16.5sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp">

                            <LinearLayout
                                android:id="@+id/msgImageLay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="Photo"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#807C7C"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/gMsg_empty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Send your first message"
                                android:textColor="#807C7C"
                                android:textSize="16.5sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/gMsg"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="25"
                                android:maxLines="1"
                                android:text="Send your first message"
                                android:textColor="#807C7C"
                                android:textSize="16.5sp"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <!--RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/msg_num_backg"
                        android:padding="5dp"
                        android:elevation="3dp">

                        <TextView
                            android:id="@+id/gMsgCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="43000"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                    </RelativeLayout-->

                    <TextView
                        android:id="@+id/message_on"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:text="100"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:background="@drawable/circle_holder"
                        android:elevation="2dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/message_on2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:background="@drawable/circle_holder"
                        android:elevation="2dp"
                        android:visibility="gone" />


                </RelativeLayout>

                <!--View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D8D2D2"/-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.FreeActivity">

    <include

        layout="@layout/app_bar_layout"
        android:id="@+id/free_app_bar">

    </include>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="0dp"
            android:id="@+id/scroll"
            android:visibility="visible"
            android:fillViewport="true"
            android:measureAllChildren="false"
            app:reverseLayout="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/free_lays"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/predict_text"
                    android:text="Today's Prediction:" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_background"
                    android:layout_marginEnd="15dp"
                    android:padding="10dp"
                    android:elevation="5dp"
                    android:visibility="visible"
                    android:id="@+id/results_layout"
                    android:layout_marginBottom="7dp"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/monday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/monday_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/tuesday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/tuesday_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/midweek_logo"
                            android:visibility="invisible"
                            android:src="@drawable/midwweek_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/thursday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/thursday_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/friday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/friday_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/saturday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/saturday_logo"/>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:id="@+id/sunday_logo"
                            android:visibility="invisible"
                            android:src="@drawable/sunday"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="25dp"
                            android:id="@+id/result_date"
                            android:textSize="15sp"
                            android:text="20/04/2022"
                            />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:text="Winning Numbers :"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/lotto_1"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/lotto_2"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/lotto_3"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/lotto_4"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/lotto_5"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:text="Machine Numbers :"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/mach_1"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/mach_2"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/mach_3"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/mach_4"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/circle_holder2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:id="@+id/mach_5"
                                    android:textSize="20sp"/>

                            </RelativeLayout>
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/my_template2"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:gnt_template_type="@layout/gnt_medium_template_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/my_template"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:gnt_template_type="@layout/gnt_small_template_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/my_template3"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:gnt_template_type="@layout/gnt_small_template_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="#1C40F4"
            android:visibility="visible"
            android:id="@+id/circle_loading"
            android:indeterminateTintMode="src_in"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
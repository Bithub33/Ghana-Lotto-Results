                android:layout_height="60dp"
                android:id="@+id/midweek_logo"
                android:visibility="invisible"
                android:src="@drawable/midwweek_logo"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:id="@+id/thursday_logo"
